<h1>Autos</h1>
<h3>@Model.CurrentCategory</h3>

<style>
    .cars {
        background-color: black;
        color: white;
        margin: 20px;
        padding: 20px;
    }
</style>
<div class-"row mt-5 mb-2">
   
    @{
        foreach (var Car in Model.GetAllCars)
        {
            <div class="cars">
                <img class="img-thumbnail" src="@Car.Image" width="330" height="204" alt="@Car.Name" />
                <h2>Model: @Car.Name</h2>
                <p>@Car.ShortDescription</p>
                @*<p><a class="btn btn-warning" href="#">Details</a></p>*@
            </div>
        }
    }
</div>



