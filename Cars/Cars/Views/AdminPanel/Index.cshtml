@model IEnumerable<Cars.Data.Model.Car>

@{
    ViewData["Title"] = "Admin panel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
div {
	color: white;
}
td {
	color: white;
}
table {
	color: white;
}
input {
	color: white;
}
</style>
<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Cars list</h3>
    </div>
    < class="panel-body">
    <table class="table table-striped table-condensed table-bordered">
        <tr>
            <th class="text-right">ID</th>
            <th class="whitetext">Name</th>
            <th class="text-right">Price</th>
            <th class="text-center">Actions</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-right">@item.CarId</td>
                <td>@Html.ActionLink(item.Name, "Edit", new { item.CarId })</td>
                <td class="text-right">@item.Price.ToString("# руб")</td>
                <td class="text-center">
                    @using (Html.BeginForm("Delete", "Admin"))
                    {
                        @Html.Hidden("GameId", item.CarId)
                        <input type="submit"
                               class="btn btn-default btn-xs"
                               value="Delete" />
                    }
                </td>
            </tr>
        }
    </table>
</div>
<div class="panel-footer">
    @Html.ActionLink("Add car", "Create", null,
        new { @class = "btn btn-default" })
</div>
</div>
